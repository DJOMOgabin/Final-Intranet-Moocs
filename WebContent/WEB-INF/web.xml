	<servlet>
		<servlet-name>Upload</servlet-name>
		<servlet-class>controlleur.Upload</servlet-class>
		<init-param>
			<param-name>chemin</param-name>
			<param-value>cours/Devoirs/</param-value>
		</init-param>
		<multipart-config>
			<location>/var/lib/tomcat8/webapps</location>
			<max-file-size>52428800</max-file-size>
			<max-request-size>104857600</max-request-size>
			<file-size-threshold>10485760</file-size-threshold>
		</multipart-config>
	</servlet>
	<servlet-mapping>
		<servlet-name>Upload</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>
